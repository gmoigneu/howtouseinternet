---
import { getRelativeLocaleUrl } from 'astro:i18n';
import { t } from '../i18n/translations';
import '../styles/global.css';

interface Props {
  title: string;
  sidebar?: boolean;
  githubEditPath?: string;
}

const { title, sidebar = false, githubEditPath } = Astro.props;
const currentLocale = Astro.currentLocale || 'en';
const locales = ['en', 'fr', 'es'] as const;
const localeNames: Record<string, string> = {
  en: 'ENG',
  fr: 'FR',
  es: 'ES',
};

// Get the current path without the locale prefix
const currentPath = Astro.url.pathname;
const pathWithoutLocale = currentPath.replace(/^\/(en|fr|es)/, '') || '/';

const githubRepoUrl = 'https://github.com/gmoigneu/howtouseinternet';
const githubEditUrl = githubEditPath ? `${githubRepoUrl}/edit/main/${githubEditPath}` : null;
---

<html lang={currentLocale}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;1,400&family=Inter:wght@400;500;600;700&family=Nunito:wght@700;800&display=swap" rel="stylesheet" />
    <title>{title} | How To Use Internet</title>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1512726806958702"
     crossorigin="anonymous"></script>
  </head>
  <body class="min-h-screen flex flex-col">
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <header class="border-b border-border">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-14">
          <!-- Logo -->
          <a
            href={getRelativeLocaleUrl(currentLocale, '/')}
            class="text-2xl font-extrabold text-text no-underline hover:text-text"
            style="font-family: 'Nunito', sans-serif;"
          >
            how to use internet.
          </a>

          <!-- Language selector -->
          <nav aria-label="Language selector" class="flex items-center gap-4">
            {locales.map((locale) => (
              locale === currentLocale ? (
                <span class="nav-link nav-link-active" aria-current="true">{localeNames[locale]}</span>
              ) : (
                <a
                  href={getRelativeLocaleUrl(locale, pathWithoutLocale)}
                  class="nav-link"
                  lang={locale}
                  hreflang={locale}
                >
                  {localeNames[locale]}
                </a>
              )
            ))}
          </nav>
        </div>
      </div>
    </header>

    <div class="flex-1 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full py-8 lg:py-12">
      {sidebar ? (
        <div class="lg:grid lg:grid-cols-[200px_1fr] lg:gap-16">
          <slot name="sidebar" />
          <main id="main-content">
            <slot />
          </main>
        </div>
      ) : (
        <main id="main-content">
          <slot />
        </main>
      )}
    </div>

    <footer class="border-t border-border mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <p class="text-sm text-text-muted">
            &copy; {new Date().getFullYear()} <span class="text-lg font-extrabold text-text no-underline" style="font-family: 'Nunito', sans-serif;">how to use internet</span> - hosted by <a href="https://upsun.com" class="text-sm text-text-muted hover:text-text no-underline">Upsun</a>
          </p>
          <nav aria-label="Footer links" class="flex items-center gap-6">
            {githubEditUrl ? (
              <a
                href={githubEditUrl}
                class="inline-flex items-center gap-1.5 text-sm text-text-muted hover:text-text no-underline"
                target="_blank"
                rel="noopener noreferrer"
              >
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                {t(currentLocale, 'editThisCourse')}
              </a>
            ) : (
              <a
                href={githubRepoUrl}
                class="inline-flex items-center gap-1.5 text-sm text-text-muted hover:text-text no-underline"
                target="_blank"
                rel="noopener noreferrer"
              >
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                {t(currentLocale, 'viewOnGithub')}
              </a>
            )}
            <a
              href={getRelativeLocaleUrl(currentLocale, '/license')}
              class="text-sm text-text-muted hover:text-text no-underline"
            >
              {t(currentLocale, 'license')}
            </a>
            <a
              href="/privacy"
              class="text-sm text-text-muted hover:text-text no-underline"
            >
              Privacy
            </a>
            <a
              href="/terms"
              class="text-sm text-text-muted hover:text-text no-underline"
            >
              Terms
            </a>
            <a
              href="mailto:hello@howtouseinternet.com"
              class="text-sm text-text-muted hover:text-text no-underline"
            >
              Contact
            </a>
          </nav>
        </div>
      </div>
    </footer>
  </body>
</html>
