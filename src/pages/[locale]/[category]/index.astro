export async function getStaticPaths() {
  const courses = await getCollection('courses');

  const categories = new Map<string, Map<string, {
    courses: Set<string>;
    totalChapters: number;
  }>>();

  for (const course of courses) {
    const parsed = parseEntryId(course.id);
    const { category, topic, courseSlug, isChapter, isMeta } = parsed;

    if (!categories.has(category)) {
      categories.set(category, new Map());
    }
    const categoryTopics = categories.get(category)!;

    if (!categoryTopics.has(topic)) {
      categoryTopics.set(topic, { courses: new Set(), totalChapters: 0 });
    }
    const topicData = categoryTopics.get(topic)!;
    topicData.courses.add(courseSlug);

    // Count chapters for multi-chapter courses
    if (isChapter && parsed.locale === 'en') {
      topicData.totalChapters++;
    }
  }

  const paths = [];
  for (const locale of ['en', 'fr', 'es']) {
    for (const [category, topics] of categories.entries()) {
      const topicsData = Array.from(topics.entries()).map(([topic, data]) => ({
        slug: topic,
        courseCount: data.courses.size,
        chapterCount: data.totalChapters,
      }));

      paths.push({
        params: { locale, category },
        props: { category, topics: topicsData },
      });
    }
  }

  return paths;
}

interface TopicData {
  slug: string;
  courseCount: number;
  chapterCount: number;
}

interface Props {
  category: string;
  topics: TopicData[];
}

