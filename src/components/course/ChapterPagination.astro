---
import { t } from '../../i18n/translations';

interface ChapterLink {
  slug: string;
  title: string;
  order: number;
  url: string;
}

interface Props {
  prevChapter?: ChapterLink;
  nextChapter?: ChapterLink;
  locale: string;
}

const { prevChapter, nextChapter, locale } = Astro.props;

// Format chapter number with leading zero
const formatChapterNumber = (order: number) => order.toString().padStart(2, '0');

// Truncate title to 35 characters
const truncateTitle = (title: string, maxLength: number = 35) => {
  if (title.length <= maxLength) return title;
  return title.slice(0, maxLength).trim() + 'â€¦';
};
---

<nav aria-label="Chapter navigation" class="chapter-pagination">
  {
    prevChapter ? (
      <a href={prevChapter.url} class="pagination-card pagination-prev">
        <span class="pagination-label">{t(locale, 'previousChapter')}</span>
        <span class="pagination-chapter" title={prevChapter.title}>
          {formatChapterNumber(prevChapter.order)}. {truncateTitle(prevChapter.title)}
        </span>
      </a>
    ) : (
      <div />
    )
  }

  {
    nextChapter ? (
      <a href={nextChapter.url} class="pagination-card pagination-next">
        <span class="pagination-label">{t(locale, 'nextChapter')}</span>
        <span class="pagination-chapter" title={nextChapter.title}>
          {formatChapterNumber(nextChapter.order)}. {truncateTitle(nextChapter.title)}
        </span>
      </a>
    ) : (
      <div />
    )
  }
</nav>

<style>
  .chapter-pagination {
    display: flex;
    justify-content: space-between;
    gap: 1.5rem;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .pagination-card {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 1rem 1.25rem;
    text-decoration: none;
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    transition: border-color 0.15s ease, background-color 0.15s ease;
    width: 33.333%;
    min-width: 0;
  }

  .pagination-card:hover {
    border-color: var(--color-text-muted);
    background-color: var(--color-background);
  }

  .pagination-prev {
    align-items: flex-start;
  }

  .pagination-next {
    align-items: flex-end;
    text-align: right;
    margin-left: auto;
  }

  .pagination-label {
    font-family: var(--font-sans);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
  }

  .pagination-chapter {
    font-family: var(--font-sans);
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-text);
    line-height: 1.3;
  }

  @media (max-width: 640px) {
    .chapter-pagination {
      flex-direction: column;
      gap: 1rem;
    }

    .pagination-card {
      width: 100%;
    }

    .pagination-next {
      align-items: flex-start;
      text-align: left;
      margin-left: 0;
    }
  }
</style>
